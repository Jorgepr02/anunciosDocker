{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center mb-4">Crear Anuncio</h1>

    <div class="card p-4 shadow-sm">
        <form method="post">
            <div class="mb-3">
                <label for="nomeAnuncio" class="form-label">Nome do Anuncio</label>
                <input type="text" name="nomeAnuncio" id="nomeAnuncio" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="descricion" class="form-label">Descrición</label>
                <textarea name="descricion" id="descricion" class="form-control" rows="3" required></textarea>
            </div>

            <div class="mb-3">
                <label for="prezoInicial" class="form-label">Prezo Inicial (€)</label>
                <input type="number" name="prezoInicial" id="prezoInicial" class="form-control" step="0.01" required>
            </div>

            <div class="mb-3">
                <label for="dataPublicacion" class="form-label">Data de Publicación</label>
                <input type="date" name="dataPublicacion" id="dataPublicacion" class="form-control" required>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_anuncio') }}" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
