{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4 w-50">
    <h2 class="mb-3">Detalles do Anuncio</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Anuncio: {{ anuncio.nomeAnuncio }}</h5>
            <p class="card-text"><strong>Descrición:</strong> {{ anuncio.descricion }}</p>
            <p class="card-text"><strong>Data Publicación:</strong> {{ anuncio.dataPublicacion|date('d-m-Y') }}</p>
            <p class="card-text"><strong>Data Venta:</strong> {{ anuncio.dataVenta ? anuncio.dataVenta|date('d-m-Y') : '—' }}</p>
            <p class="card-text"><strong>Vendido:</strong> {{ anuncio.vendido ? 'Sí' : 'No' }}</p>
            <p class="card-text"><strong>Prezo Inicial:</strong> {{ anuncio.prezoInicial }} €</p>
            <p class="card-text"><strong>Prezo Final:</strong> {{ anuncio.prezoFinal ? anuncio.prezoFinal ~ ' €' : '—' }}</p>
        </div>
    </div>

    {% if not anuncio.vendido %}
    <div class="mt-3">
        <a href="{{ path('vender_anuncio', {'id': anuncio.id}) }}" class="btn btn-success">Vender</a>
    </div>
    {% endif %}

    <div class="mt-3 mb-3">
        <a href="{{ path('app_anuncio') }}" class="btn btn-secondary">Volver</a>
    </div>
</div>
{% endblock %}
